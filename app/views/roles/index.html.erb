<% content_for :pagetitle do %>
  Roles
<% end %>

<% content_for :item_bar do %>
  <%= link_to 'New Role', new_role_path, class: 'btn btn-primary float-right' %>
<% end %>

<div class='table-responsive'>
  <table id='roles-table' class='table table-striped'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Created At</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= link_to role.name, role %></td>
          <td><%= role.created_at.strftime('%D %I:%M %p') %></td>
          <td><%= link_to fa_icon("edit lg"), edit_role_path(role) if policy(role).edit? %></td>
          <td><%= link_to fa_icon("trash lg"), role, method: :delete, data: { confirm: 'Are you sure?' }, id: 'destroy_link' if policy(role).destroy? %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
